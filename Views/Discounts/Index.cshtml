@model IEnumerable<Sammishop.Models.Discount>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<div class="sb2-2">
    <div class="sb2-2-2">
        <ul>
            <li>
                <a href="#"><i class="fa fa-home" aria-hidden="true"></i> Trang chủ</a>
            </li>
            <li class="active-bre">
                <a href="#"> Mã khuyến mãi</a>
            </li>
        </ul>
    </div>
    <div class="sb2-2-3">
        <div class="row">
            <div class="col-md-12">
                <div class="box-inn-sp">
                    <div class="inn-title">
                        <h4><i class="fa fa-bookmark"></i> Danh sách mã khuyến mãi</h4>
                        <a class="dropdown-button drop-down-meta" href="#" data-activates="dr-users"><i class="material-icons">more_vert</i></a>
                        <ul id="dr-users" class="dropdown-content">
                            <li>
                                <a asp-action="Create">Thêm mới</a>
                            </li>
                            <li>
                                <a href="#!">Sửa</a>
                            </li>
                            <li>
                                <a href="#!">Cập nhật</a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a href="#!"><i class="material-icons">delete</i>Xóa</a>
                            </li>
                            <li>
                                <a href="#!"><i class="material-icons">subject</i>View All</a>
                            </li>
                        </ul>

                        <!-- Dropdown Structure -->

                    </div>
                    <div class="inn-title row">
                        <div class="timkiem col-md-1">
                            <label>Tìm kiếm</label>
                        </div>
                        <form class="app-search col-md-3" asp-action="Search" method="get">
                            <input type="text" placeholder="Search..." class="form-control" name="query">
                            <button type="submit" class="search-submit"><i class="fa fa-search"></i></button>
                        </form>
                    </div>
                    <div class="tab-inn">
                        <div class="table-responsive table-desi">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th class="text-center">STT</th>
                                        <th class="text-center">Mã</th>
                                        <th>Mô tả</th>
                                        <th class="text-center">Số lượng</th>
                                        <th class="text-center">Bắt đầu</th>
                                        <th class="text-center">Kết thúc</th>
                                        <th class="text-center">Trạng thái</th>
                                        <th class="text-center">Sửa</th>
                                        <th class="text-center">Xóa</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ var i = 1;}
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td class="text-center">
                                            <span class="list-img">@(i++)</span>
                                        </td>
                                        <td class="text-center">
                                            <span class="list-img">@Html.DisplayFor(modelItem => item.Code)</span>
                                        </td> 
                                        <td>
                                            <span class="list-img">@Html.DisplayFor(modelItem => item.Descriptions)</span>
                                        </td>
                                        <td class="text-center">
                                            <span class="list-img">@Html.DisplayFor(modelItem => item.Quantity)</span>
                                        </td>
                                        <td class="text-center">
                                            <span class="list-img">@item.DateTimeStart.ToString("dd/MM/yyyy")</span>
                                        </td>
                                        <td class="text-center">
                                            <span class="list-img">@item.DateTimeFinish.ToString("dd/MM/yyyy")</span>
                                        </td>
                                        <td class="text-center">
                                            <a > <i class="@(@item.Active? "fa fa-check-circle" : "fa fa-ban red")">@Url.Content(@item.Active ? " Đang áp dụng" : " Hết hạn")</i></a>

                                        </td>
                                        <td class="text-center">
                                            <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                        </td>
                                        <td class="text-center">

                                            <a asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Bạn có chắc chắn muốn xóa người dùng này không?');"><i class="fa fa-trash-o red"></i></a>
                                        </td>


                                    </tr>
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
