                            @foreach (var item in histories)
                            {
                                <div class="imagebox style4">
                                    <div class="box-image">
                                        <a asp-action="Details" asp-route-id="@item.ProductId">
                                            @{
                                                var image = item.Product.Files.FirstOrDefault(x => x.ProductId == item.ProductId & x.thumbnail == true);
